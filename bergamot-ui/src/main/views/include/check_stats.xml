<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<fragment xmlns="com.intrbiz.balsa">
	<container rendered="#{Balsa().permission('ui.view.stats')}">
		<h2>Statistics</h2>
		<div class="row">
			<div class="col4 dash_icon">
				<p>
					<span class="label wide">Last runtime: </span>
					<span class="value">#{decimalformat('0.000', check.state.lastRuntime / 1000.0)} s</span>
				</p>
				<p>
					<span class="label wide">Average runtime: </span>
					<span class="value">#{decimalformat('0.000', check.state.averageRuntime / 1000.0)} s</span>
				</p>
			</div>
			<div class="col4 dash_icon">
				<p>
					<span class="label wide">Last processing latency: </span>
					<span class="value">#{decimalformat('0.000', check.state.lastCheckProcessingLatency / 1000.0)} s</span>
				</p>
				<p>
					<span class="label wide">Average processing latency: </span>
					<span class="value">#{decimalformat('0.000', check.state.averageCheckProcessingLatency / 1000.0)} s</span>
				</p>
			</div>
			<div class="col4 dash_icon">
				<p>
					<span class="label wide">Last execution latency: </span>
					<span class="value">#{decimalformat('0.000', check.state.lastCheckExecutionLatency / 1000.0)} s</span>
				</p>
				<p>
					<span class="label wide">Average execution latency: </span>
					<span class="value">#{decimalformat('0.000', check.state.averageCheckExecutionLatency / 1000.0)} s</span>
				</p>
			</div>
		</div>
	</container>
</fragment>