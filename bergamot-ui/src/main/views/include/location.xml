<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa">
	<a href="/location/id/#{location.id}">
		<div class="col3 dash_icon">
		    <h3>
				<span class="dash_img status_#{location.state.status.toString().toLowerCase()}" title="The location is #{location.state.status.toString().toLowerCase()}">
					<img src="#{public('/images/icons/64/location.png')}" />
				</span>
				<span class="name">#{location.summary}</span>
		    </h3>
		    <p>
			    <span class="label">OK: </span>
			    <span class="value">#{location.state.okCount}</span>
		    </p>
		    <p>
			    <span class="label">Warning: </span>
			    <span class="value">#{location.state.warningCount}</span>
		    </p>
		    <p>
			    <span class="label">Critical: </span>
			    <span class="value">#{location.state.criticalCount}</span>
		    </p>
		</div>
	</a>
</fragment>