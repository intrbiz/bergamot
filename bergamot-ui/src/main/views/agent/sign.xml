<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Bergamot Agent Manager">

    <div clas="row">
    	<h3>Sign Agent Certificate</h3>
    	<p class="text-body">
			
    	</p>
    	<div class="col12">
    		<form action="#{path('/agent/sign')}" method="post">
    			<p>
    				<span>Certificate Request:</span>
    			</p>
    			<p>
    				<textarea id="certificate-request" name="certificate-request" style="width: 500px; height: 200px;"></textarea>
    			</p>
    			<p>
    				<input type="submit" name="sign-agent" value="Sign Agent Certificate"/>
    			</p>
    		</form>
    	</div>
    </div>
    
</fragment>