<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Bergamot Agent Manager">

    <div clas="row">
    	<h3>Signed Agent Certificate</h3>
    	<p>
    		The certificate request was successfully signed
    	</p>
    	<div class="col12">
    		<h4>Agent UUID</h4>
    		<pre>#{agentId}</pre>
    	</div>
    	<div class="col12">
    		<h4>Agent Certificate</h4>
    		<pre>#{agentCrt}</pre>
    	</div>
    	<div class="col12">
    		<h4>Site CA Certificate</h4>
    		<pre>#{siteCaCrt}</pre>
    	</div>
    	<div class="col12">
    		<h4>CA Certificate</h4>
    		<pre>#{caCrt}</pre>
    	</div>
    </div>
    
</fragment>