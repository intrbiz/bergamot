<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Bergamot Agent Manager">

    <div clas="row">
    	<h3>Generate Agent Configuration</h3>
    	<p class="text-body">
			
    	</p>
    	<div class="col12">
    		<form action="#{path('/agent/generate-config')}" method="post">
    			<p>
    				<span>Agent Host Name:</span>
    				<input type="text" id="common_name" name="common-name" placeholder="agent.my-domain.com"/>
    			</p>
    			<p>
    				<input type="submit" name="generate-config" value="Generate Agent Config"/>
    			</p>
    		</form>
    	</div>
    </div>
    
</fragment>