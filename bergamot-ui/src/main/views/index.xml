<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Overview">
		<!-- Alerts -->
		<div class="row" rendered="#{! alerts.isEmpty()}">
			<h2>Alerts</h2>
			<data-set var="check" value="#{alerts}">
				<include view="include/check" data-alert="#{true}"/>
			</data-set>
		</div>
		
		<!-- Overview -->
		<!-- An overview of groups -->
		<div class="row">
			<h2>Groups</h2>
			<data-set var="group" value="#{groups}">
				<include view="include/group"/>
			</data-set>
		</div>
		
		<!-- An overview of locations -->
		<div class="row">
			<h2>Locations</h2>
			<data-set var="location" value="#{locations}">
				<include view="include/location"/>
			</data-set>
		</div>
		
		<!-- Hard refresh -->
		<script type="text/javascript">
			require(["bergamot/lib/ui/group-state"], function(bergamot_ui_group_state) {
			    bergamot_ui_group_state.attachTo("div.group");
			});
		</script>
</fragment>