<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Global Admin">
	<div class="row submenu pull-right">
		<a href="/global/admin/utils/">Global System Utilities</a>
	</div>
    <div class="row">
		<h3>Workers</h3>
		<data-set var="worker" value="#{workers}">
			<div class="col3 dash_icon check">
				<h3>
					<span class="dash_img status_ok" title="Worker #{worker.id}">
						<img src="#{public('/images/icons/64/bergamot.png')}" />
					</span>
					<span class="name">#{ucFirst(coalesce(worker.application, 'Worker'))}</span>
					<span class="name">(#{worker.id})</span>
			    </h3>
			    <p>
				    <span class="label">Worker Pool: </span>
				    <span class="value">#{coalesce(worker.workerPool, 'any')}</span>
			    </p>
			    <p>
				    <span class="label">Host: </span>
				    <span class="value">#{worker.hostName}</span>
			    </p>
			    <p>
				    <span class="label">&nbsp;</span>
				    <span class="value">#{worker.info}</span>
			    </p>
			</div>
		</data-set>
    </div>
    <div class="row">
		<h3 title="The processing pools in this Bergamot cluster which can schedule checks and process results">Processing Pools</h3>
		<data-set var="processor" value="#{cluster_info.processors}">
			<div class="col3 dash_icon check">
				<h3>
					<span class="dash_img status_ok" title="Member #{processor.address}">
						<img src="#{public('/images/icons/64/bergamot.png')}" />
					</span>
					<span class="name" title="The member this processor resides on">Member #{processor.address}</span>
			    </h3>
			    <p>
				    <span class="label" title="The UUID of this member">UUID: </span>
				    <span class="value" style="font-size: 13px;">#{processor.uuid}</span>
			    </p>				    
			    <p>
				    <span class="label" title="The number of site pools being processed">Site Pools: </span>
				    <span class="value">#{processor.pools.size}</span>
			    </p>
			</div>
		</data-set>
	</div>
    <div class="row">
		<h3>Worker Routes</h3>
		<table style="width: 100%">
			<tr>
				<th>Worker Pool</th>
				<th>Engine</th>
				<th>Site</th>
				<th>Workers</th>
			</tr>
			<data-set var="worker_pool_routes" value="#{route_table.entrySet()}">
				<tr>
					<td>#{worker_pool_routes.key}</td>
					<td></td>
					<td></td>
					<td></td>
				</tr>
				<data-set var="engine_routes" value="#{worker_pool_routes.value.entrySet()}">
					<tr>
						<td></td>
						<td>#{engine_routes.key}</td>
						<td></td>
						<td></td>
					</tr>
					<data-set var="site_routes" value="#{engine_routes.value.entrySet()}">
						<tr>
							<td></td>
							<td></td>
							<td>#{site_routes.key}</td>
							<td>#{list(site_routes.value).size}</td>
						</tr>
					</data-set>
				</data-set>
			</data-set>
		</table>
	</div>
    <div class="row">
		<h3>Sites</h3>
		<table style="width: 100%">
			<tr>
				<th>Name</th>
				<th>Summary</th>
				<th>Pool Count</th>
				<th>Aliases</th>
				<th>Disabled</th>
				<th></th>
			</tr>
			<data-set var="site" value="#{sites}">
				<tr>
					<td><a href="https://#{site.name}/">https://#{site.name}/</a></td>
					<td>#{site.summary}</td>
					<td>#{site.poolCount}</td>
					<td>
						<data-set var="alias" value="#{site.aliases}">
							<a href="https://alias/">https://alias/</a>
						</data-set>
					</td>
					<td>#{if(site.disabled, 'Yes', 'No')}</td>
					<td>
						<!-- Disable -->
    					<form path="/global/admin/site/id/#{site.id}/disable" rendered="#{! site.disabled}">
							<input type="submit" name="disable" value="Disable" class="danger"/>
						</form>
						<!-- Enable -->
    					<form path="/global/admin/site/id/#{site.id}/enable" rendered="#{site.disabled}">
							<input type="hidden" name="id" value="#{site.id}"/>
							<input type="submit" name="enable" value="Enable" class="danger"/>
						</form>
						<!-- Generate Site Certificates -->
						<form path="/global/admin/site/id/#{site.id}/generate-certificates" rendered="#{! site.disabled}">
							<input type="hidden" name="id" value="#{site.id}"/>
							<input type="submit" name="enable" value="Generate Certificates" class="danger"/>
						</form>
					</td>
				</tr>
			</data-set>
		</table>
	</div>
	    <div class="row">
		<h3>Global Admins</h3>
		<table style="width: 100%">
			<tr>
				<th>Site</th>
				<th>Username</th>
				<th>Name</th>
				<th>Email</th>
				<th>Disabled</th>
				<th>Password Change Required</th>
	    		<th>Locked</th>
				<th></th>
			</tr>
			<data-set var="admin" value="#{globalAdmins}">
				<tr>
					<td>#{admin.site.name}</td>
					<td>#{admin.name}</td>
					<td>#{admin.summary}</td>
					<td>#{admin.email}</td>
					<td>#{if(admin.isGlobalAdmin(), 'no', 'Yes')}</td>
					<td>#{if(admin.forcePasswordChange, 'Yes', 'No')}</td>
	    			<td>#{if(admin.locked, coalesce(contact.lockedReason.description, 'Yes'), 'No')}</td>
					<td>
						<!-- Disable -->
    					<form path="/global/admin/contact/id/#{admin.id}/disable" rendered="#{admin.isGlobalAdmin()}">
							<input type="submit" name="disable" value="Disable" class="danger"/>
						</form>
						<!-- Enable -->
    					<form path="/global/admin/contact/id/#{admin.id}/enable" rendered="#{! admin.isGlobalAdmin()}">
							<input type="submit" name="enable" value="Enable" class="danger"/>
						</form>
						<!-- Remove -->
    					<form path="/global/admin/contact/id/#{admin.id}/remove" rendered="#{! admin.isGlobalAdmin()}">
							<input type="submit" name="remove" value="Remove" class="danger"/>
						</form>
					</td>
				</tr>
			</data-set>
			<tr>
				<td colspan="8">
					<form path="/global/admin/contact/add">
						<select name="id">
							<option value="">Select contact</option>
							<data-set var="admin" value="#{allAdmins}">
								<option value="#{admin.id}">#{admin.summary} (#{admin.site.name}/#{admin.name}) - #{admin.email}</option>
							</data-set>
						</select>
						<input type="submit" name="add" value="Make a Global Administrator" class="danger"/>
					</form>
				</td>
			</tr>
		</table>
	</div>
</fragment>