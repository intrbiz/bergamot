<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Host Groups">
	<div class="row">
		<data-set var="hostgroup" value="#{hostgroups}">
			<a href="/hostgroup/name/#{hostgroup.name}">
				<div class="col3 dash_icon">
				    <h3>
						<span class="dash_img #{hostgroup.state.status.toString().toLowerCase()}" title="The host group is #{hostgroup.state.status.toString().toLowerCase()}">
							<img src="/network-server.png" />
						</span>
						<span class="name">#{hostgroup.displayName}</span>
				    </h3>
				    <p>
					    <span class="label">OK: </span>
					    <span class="value">#{hostgroup.state.okCount}</span>
				    </p>
				    <p>
					    <span class="label">Warning: </span>
					    <span class="value">#{hostgroup.state.warningCount}</span>
				    </p>
				    <p>
					    <span class="label">Critical: </span>
					    <span class="value">#{hostgroup.state.criticalCount}</span>
				    </p>
				</div>
			</a>
		</data-set>
	</div>
	<script type="text/javascript">
		$(document).ready(function(){
			setTimeout(function(){
				window.location = window.location;
			}, 30000);
		});
	</script>
</fragment>