<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Configure Location">
    
    <form action="#{path('/admin/location/configure' + if(team.id == null, '', '/id/' + location.id)')}" method="post">
    	<div clas="row">
			<include data-configuration="#{location}" data-summary="Team" view="admin/include/configure_name"/>
			<include data-configuration="#{location}"                     view="admin/include/configure_inherit"/>
			<include data-configuration="#{location}"                     view="admin/include/configure_location"/>
    		<div class="col12">
    			<input type="submit" name="configure" id="configure" value="Configure location"/>
    		</div>
   	 	</div>
	</form>
    
</fragment>