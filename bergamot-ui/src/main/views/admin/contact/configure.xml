<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Configuration for contact #{coalesce(contact.summary, contact.name)}">
    <div class="row">
   		<h4>XML Configuration</h4>
   		<pre>#{contact.toString()}</pre>
    </div>
    <div class="row">
   		<h4>Resolved Configuration</h4>
   		<p class="text-body">The following is the resultant configuration once templates have been applied:</p>
   		<pre>#{contact.resolve().toString()}</pre>
    </div>
    <div class="row">
    	<a href="/admin/changeset/add/contact/id/#{contact.id}" class="add">Edit this contact</a>
    	<a href="/admin/changeset/remove/contact/id/#{contact.id}" class="remove">Remove this contact</a>
    </div>
</fragment>