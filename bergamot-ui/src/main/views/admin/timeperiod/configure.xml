<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Configure Time Period">
    
    <form action="#{path('/admin/timeperiod/configure' + if(timeperiod.id == null, '', '/id/' + timeperiod.id)')}" method="post">
    	<div clas="row">
			<include data-configuration="#{timeperiod}" data-summary="Time Period" view="admin/include/configure_name"/>
			<include data-configuration="#{timeperiod}" view="admin/include/configure_inherit"/>
			<include data-configuration="#{timeperiod}" view="admin/include/configure_exclude"/>
			<include data-configuration="#{timeperiod}" view="admin/include/configure_timeperiod"/>
    		<div class="col12">
    			<input type="submit" name="configure" id="configure" value="Configure Time Period"/>
    		</div>
   	 	</div>
	</form>
    
</fragment>