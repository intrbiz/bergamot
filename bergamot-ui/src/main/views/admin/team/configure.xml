<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<fragment xmlns="com.intrbiz.balsa" title="Configuration for team #{coalesce(team.summary, team.name)}">
    <div class="row">
   		<h4>XML Configuration</h4>
   		<pre>#{team.toString()}</pre>
    </div>
    <div class="row">
   		<h4>Resolved Configuration</h4>
   		<p class="text-body">The following is the resultant configuration once templates have been applied:</p>
   		<pre>#{team.resolve().toString()}</pre>
    </div>
    <div class="row">
    	<a href="/admin/changeset/add/team/id/#{team.id}" class="add">Edit this team</a>
    	<a href="/admin/changeset/remove/team/id/#{team.id}" class="remove">Remove this team</a>
    </div>
</fragment>