<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<fragment xmlns="com.intrbiz.balsa" title="Change #{change.summary}">
    <div class="row">
    	<form id="changes" method="post" action="#{path('/admin/configchange/save/id/' + change.id)}">
			<div class="col12">
				<p class="field area">
					<label for="change_configuration">Configuration</label>
					<textarea name="change_configuration" id="change_configuration" style="height: 600px; width: 1700px;">#{change.configuration.toString()}</textarea>
				</p>
			</div>
	   		<div class="col12">
	   			<input type="submit" name="save" id="save" value="Save Change"/>
	   		</div>
   		</form>
    </div>
</fragment>