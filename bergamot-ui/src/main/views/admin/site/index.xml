<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Global Configuration">
    
    <div class="row">
    	<h3>Global Parameters</h3>
    	<p class="text-body">
    		Global site configuration parameters, which can be 
    		used in command definitions.
    	</p>
    	<p>
    		<a href="/admin/configchange/add/site-parameters" class="pull-right">Change global parameters</a>
    	</p>
       	<div class="col12">
	    	<table style="width: 100%;">
	    		<tr>
		    		<th style="width: 33%;">Name</th>
		    		<th>Value</th>
	    		</tr>
	    		<data-set var="parameter" value="#{site.parameters}">
	    			<tr>
	    				<td>#{parameter.name}</td>
	    				<td><pre>#{parameter.value}</pre></td>
	    			</tr>
	    		</data-set>
	    	</table>
    	</div>
    </div>
    
</fragment>