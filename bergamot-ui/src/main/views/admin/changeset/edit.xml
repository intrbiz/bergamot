<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<fragment xmlns="com.intrbiz.balsa" title="Change Set #{current_changeset.summary}">
    <div class="row">
    	<form method="post" action="#{path('/admin/changeset/current')}">
	    	<div class="col12" style="margin-bottom: 20px;">
				<p class="field">
					<label for="summary">Change Summary</label>
					<input type="text" name="summary" id="summary" value="#{current_changeset.summary}"/>
				</p>
				<p class="field area">
					<label for="description">Change Description</label>
					<textarea name="description" id="description">#{current_changeset.description}</textarea>
				</p>
			</div>
			<data-set var="change" value="#{current_changeset.changes}">
				<div class="col12" style="margin-bottom: 20px; background-color: #EEE;">
					<p class="field">
						<label for="change_summary[#{change_rownum}]">Change Summary</label>
						<input type="text" name="change_summary[#{change_rownum}]" id="change_summary_#{change_rownum}" value="#{change.summary}"/>
					</p>
					<p class="field area">
						<label for="change_configuration[#{change_rownum}]">Configuration</label>
						<textarea name="change_configuration[#{change_rownum}]" id="change_configuration_#{change_rownum}" style="height: 150px;">#{change.configuration}</textarea>
					</p>
				</div>
			</data-set>
	   		<div class="col12">
	   			<input type="submit" name="save" id="save" value="Save Changes"/>
	   		</div>
   		</form>
    </div>
</fragment>