<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Configure Command">
    
    <form action="#{path('/admin/command/configure' + if(command.id == null, '', '/id/' + command.id)')}" method="post">
    	<div clas="row">
    		<include data-configuration="#{command}" data-summary="Command" view="admin/include/configure_name"/>
			<include data-configuration="#{command}" view="admin/include/configure_inherit"/>
    		<include data-configuration="#{command}" view="admin/include/configure_command"/>
	    	<div class="col12">
				<input type="submit" name="configure" id="configure" value="Configure Command"/>
    		</div>
    	</div>
    </form>
    
</fragment>