<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<fragment xmlns="com.intrbiz.balsa" title="Configuration for command #{coalesce(command.summary, command.name)}">
    <div class="row">
   		<h4>XML Configuration</h4>
   		<pre>#{command.toString()}</pre>
    </div>
    <div class="row">
   		<h4>Resolved Configuration</h4>
   		<p class="text-body">The following is the resultant configuration once templates have been applied:</p>
   		<pre>#{command.resolve().toString()}</pre>
    </div>
    <div class="row">
    	<a href="/admin/changeset/add/command/id/#{command.id}" class="add">Edit this command</a>
    	<a href="/admin/changeset/remove/command/id/#{command.id}" class="remove">Remove this command</a>
    </div>
</fragment>