<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Commands">
    
    <div clas="row">
    	<div class="col12">
	    	<table>
	    		<tr>
		    		<th>Display Name</th>
		    		<th>Name</th>
		    		<th>Engine</th>
		    		<th>Executor</th>
		    		<th>Extends</th>
		    		<th>Description</th>
	    		</tr>
	    		<data-set var="command" value="#{commands}">
	    			<tr data-command-id="#{command.id}">
	    				<td><a href="/admin/config/id/#{command.id}">#{command.summary}</a></td>
	    				<td>#{command.name}</td>
	    				<td>#{coalesce(command.engine, '')}</td>
	    				<td>#{coalesce(command.executor, '')}</td>
	    				<td>
	    					<data-set var="inherit" value="#{command.configuration.inheritedTemplates}">
	    						<span rendered="#{inherit_rownum > 0}">, </span>
	    						<span>#{inherit}</span>
	    					</data-set>
	    				</td>
	    				<td>#{coalesce(command.description, '')}</td>
	    			</tr>
	    		</data-set>
	    	</table>
    	</div>
    </div>
    
    <div class="row">
    	<h3>Templates</h3>
    	<p class="text-body">
    		Templates are be applied to a command to avoid having to repeatedly configure common parameters.
    		Below are the templates that can be used.
    	</p>
       	<div class="col12">
	    	<table>
	    		<tr>
	    			<th>Display Name</th>
		    		<th>Name</th>
		    		<th>Engine</th>
		    		<th>Executor</th>
		    		<th>Extends</th>
		    		<th>Description</th>
	    		</tr>
	    		<data-set var="template" value="#{command_templates}">
	    			<tr data-command-id="#{template.id}">
		    			<td><a href="/admin/config/id/#{template.id}" title="Configure this command template">#{template.summary}</a></td>
	    				<td>#{template.name}</td>
	    				<td>#{coalesce(template.configuration.engine, '')}</td>
	    				<td>#{coalesce(template.configuration.executor, '')}</td>
	    				<td>
	    					<data-set var="inherit" value="#{template.configuration.inheritedTemplates}">
	    						<span rendered="#{inherit_rownum > 0}">, </span>
	    						<span>#{inherit}</span>
	    					</data-set>
	    				</td>
	    				<td>#{coalesce(template.description, '')}</td>
	    			</tr>
	    		</data-set>
	    	</table>
    	</div>
    </div>
    
</fragment>