<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa">
	<div class="col12" style="margin-bottom: 20px;">
		<h2>Location</h2>
		<p class="text-body">
			A #{lc(summary)} can be located within a physical location.
		</p>
		<p class="field">
			<label for="location">Location</label>
			<select name="location" id="location">
				<option value="">No Location</option>
				<data-set var="a_location" value="#{locations}">
					<option rendered="#{configuration.location == a_location.name}" selected="selected" value="#{a_location.name}">#{coalesce(a_location.summary, a_location.name)}</option>
					<option rendered="#{configuration.location != a_location.name}" value="#{a_location.name}">#{coalesce(a_location.summary, a_location.name)}</option>
				</data-set>
			</select>
		</p>
	</div>
</fragment>