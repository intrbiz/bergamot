<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa">
    <div class="col12" style="margin-bottom: 20px;">
        <h2>#{summary} State</h2>
        <p class="text-body">
            How should this check change state.
        </p>
		<p class="field">
			<label for="failed_after">Failed After</label>
			<input type="text" name="failed_after" id="failed_after" placeholder="4" value="#{coalesce(configuration.state.failedAfter, '')}"/>
		</p>
		<p class="field">
			<label for="recovers_after">Recovers After</label>
			<input type="text" name="recovers_after" id="recovers_after" placeholder="10" value="#{coalesce(configuration.state.recoversAfter, '')}"/>
		</p>
	</div>
</fragment>