<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Web Routes">
    
    <div clas="row">
    	<div class="col12">
			<table>
				<tr>
					<th>Method</th>
					<th>Path</th>
					<th>As</th>
				</tr>
				<data-set var="route" value="#{routes}">
					<tr>
						<td>#{route.method}</td>
						<td>#{route.prefix + route.pattern}</td>
						<td>
							<ul>
								<data-set var="as" value="#{route.compiledPattern.as}">
									<li>#{as}</li>
								</data-set>
							</ul>
						</td>
					</tr>
				</data-set>
			</table>
		</div>
   	</div>
    
</fragment>