<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Service Groups">
	<div class="row">
		<data-set var="servicegroup" value="#{servicegroups}">
			<a href="/servicegroup/name/#{servicegroup.name}">
				<div class="col3 dash_icon">
				    <h3>
						<span class="dash_img #{servicegroup.state.status.toString().toLowerCase()}" title="The service group is #{servicegroup.state.status.toString().toLowerCase()}">
							<img src="/applications-system.png" />
						</span>
						<span class="name">#{servicegroup.displayName}</span>
				    </h3>
				    <p>
					    <span class="label">OK: </span>
					    <span class="value">#{servicegroup.state.okCount}</span>
				    </p>
				    <p>
					    <span class="label">Warning: </span>
					    <span class="value">#{servicegroup.state.warningCount}</span>
				    </p>
				    <p>
					    <span class="label">Critical: </span>
					    <span class="value">#{servicegroup.state.criticalCount}</span>
				    </p>
				    <p>
					    <span class="label">Suppressed: </span>
					    <span class="value">#{servicegroup.state.suppressedCount}</span>
				    </p>
				</div>
			</a>
		</data-set>
	</div>
	<script type="text/javascript">
		$(document).ready(function(){
			setTimeout(function(){
				window.location = window.location;
			}, 30000);
		});
	</script>
</fragment>