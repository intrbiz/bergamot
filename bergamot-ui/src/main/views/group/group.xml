<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="#{group.displayName}">

	<h2 rendered="#{! isempty(checks)}">Checks in #{group.displayName}</h2>
	<div class="row" rendered="#{! isempty(checks)}">
		<data-set var="check" value="#{checks}">
			<include view="include/check"/>
		</data-set>
	</div>
	
	<h2 rendered="#{! isempty(groups)}">Groups in #{group.displayName}</h2>
	<div class="row" rendered="#{! isempty(groups)}">
		<data-set var="group" value="#{groups}">
			<include view="include/group"/>
		</data-set>
	</div>
	
	<script type="text/javascript">
		$(document).ready(function(){
			setTimeout(function(){
				window.location = window.location;
			}, 30000);
		});
	</script>
	
</fragment>