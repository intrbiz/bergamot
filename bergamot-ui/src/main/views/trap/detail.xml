<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- The index view -->
<fragment xmlns="com.intrbiz.balsa" title="Trap #{trap.summary} on Host #{trap.host.summary}">

	<div class="row submenu pull-right">
		<a rendered="#{trap.suppressed}"  href="/trap/unsuppress/#{trap.id}">Unsupress</a>
		<a rendered="#{!trap.suppressed}" href="/trap/suppress/#{trap.id}">Supress</a>
		<a rendered="#{trap.enabled}"     href="/trap/disable/#{trap.id}">Disable</a>
		<a rendered="#{!trap.enabled}"    href="/trap/enable/#{trap.id}">Enable</a>
	</div>

	<div class="row">
		<div class="col4 dash_icon check" data-check-id="#{trap.id}">
			<h3>
				<span class="dash_img #{trap.state.status.toString().toLowerCase()}" title="The trap is #{trap.state.status.toString().toLowerCase()}">
					<img src="/trap-icon.png" />
				</span>
				<span class="name">#{trap.summary}</span>
		    </h3>
		    <p>
			    <span class="label wide">Status: </span>
			    <span class="value">#{trap.state.status.toString().substring(0,1) + trap.state.status.toString().substring(1).toLowerCase()}</span>
		    </p>
		    <p>
			    <span class="label wide">Host: </span>
			    <a href="/host/name/#{trap.host.name}">
				    <span class="value">#{trap.host.summary}</span>
				</a>
		    </p>
		    <p>
			    <span class="label wide">Attempt: </span>
			    <span class="value">
			    	<span>#{trap.state.attempt} of #{trap.currentAttemptThreshold}</span>
			    	<span class="info" rendered="#{trap.state.transitioning}" title="The trap is changing state">Changing</span>
			    	<span class="info" rendered="#{trap.state.hard}" title="The trap is in a steady state">Steady</span>
			    </span>
		    </p>
		    <p>
			    <span class="label wide">Suppressed: </span>
			    <span class="value">#{if(trap.suppressed, 'yes', 'no')}</span>
		    </p>
		    <p>
			    <span class="label wide">Enabled: </span>
			    <span class="value">#{if(trap.enabled, 'yes', 'no')}</span>
		    </p>		    
		    <p>
			    <span class="label wide">Last checked: </span>
			    <span class="value">#{dateformat('HH:mm:ss', trap.state.lastCheckTime)} on #{dateformat('EEEE dd/MM/yyyy', trap.state.lastCheckTime)}</span>
		    </p>
		    <p>
			    <span class="label wide">Last state change: </span>
			    <span class="value">#{dateformat('HH:mm:ss', trap.state.lastStateChange)} on #{dateformat('EEEE dd/MM/yyyy', trap.state.lastStateChange)}</span>
		    </p>
		    <p>
			    <span class="label wide">Last status: </span>
			    <span class="value">#{trap.state.lastHardStatus.toString().substring(0,1) + trap.state.lastHardStatus.toString().substring(1).toLowerCase()}</span>
		    </p>
		    <p class="output">
			    <span class="label wide">Output: </span>
			    <span class="value">#{coalesce(trap.state.output, '')}</span>
		    </p>
		</div>
	</div>
	
	<container rendered="#{Balsa().permission('ui.config.view')}">
	
		<h2>Configuration</h2>
		
		<div class="row">
			<div class="col4 dash_icon">
				<h3>Notify</h3>
				<data-set var="contact" value="#{trap.contacts}">
					<p>
						<span class="label wide">Contact</span>
						<span class="value"><a href="/contact/id/#{contact.id}">#{contact.summary}</a></span>
					</p>
				</data-set>
				<data-set var="team" value="#{trap.teams}">
					<p>
						<span class="label wide">Team</span>
						<span class="value"><a href="/team/id/#{team.id}">#{team.summary}</a></span>
					</p>
				</data-set>
			</div>
			<div class="col4 dash_icon">
				<h3>Notifications</h3>
				<p>
					<span class="label wide">Notifications enabled</span>
					<span class="value">#{if(trap.notifications.enabled, 'yes', 'no')}</span>
				</p>
				<p>
					<span class="label wide">Notification period</span>
					<span class="value">#{coalesce(trap.notifications.timePeriod.summary, 'Not configured')}</span>
				</p>
			</div>
		</div>
		
		<div class="row">
			<div class="col12">
				<h3>XML</h3>
				<pre>#{trap.configuration.toString()}</pre>
			</div>
		</div>
	
	</container>
	
	<script type="text/javascript">
		require(["bergamot/lib/util/console-log", "bergamot/lib/ui/check-state", "bergamot/lib/data/api-driver"], function(bergamot_console_log, bergamot_ui_server_state, bergamot_api_driver)
		{
		    bergamot_console_log.attachTo(document);

		    bergamot_ui_server_state.attachTo("div.check");

		    bergamot_api_driver.attachTo(document, {
				url: "ws://127.0.0.1:8081/websocket",
		    });
		});
	</script>
	
</fragment>