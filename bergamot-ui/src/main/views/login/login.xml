<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- A template view, applied to all views -->
<html xmlns="com.intrbiz.balsa">
	<head>
		<title>Bergamot Monitoring - Login</title>
		<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
		<link rel="stylesheet" type="text/css" href="#{public('/style.css')}" />
	</head>
	<body>
		<div id="header">
			<div class="container">
				<div id="logo">
					<a href="/">
						<img src="#{public('/bergamot_h40.png')}" alt="Bergamot Monitoring"/>
					</a>
				</div>
			</div>
		</div>
		<div id="content">
			<div class="container">			
				<div id="login-box">
					<h2 class="centre">Welcome to Bergamot Monitoring</h2>
					<h4 class="centre">Please login to continue</h4>
					<p rendered="#{error == 'invalid'}" class="error centre">
                    	The username or password you entered was incorrect, please try again.
                    </p>
					<form method="post" action="#{path('/login')}">
						<p>
							<input type="text" id="username" name="username" placeholder="Enter your username" value="#{coalesce(username, '')}"/>
						</p>
						<p>
							<input type="password" id="password" name="password" placeholder="Enter your password"/>
						</p>
                        <p>
                            <input type="checkbox" id="remember_me" name="remember_me" value="yes"/>
                            <label for="remember_me">Remember me on this computer</label>
                        </p>
						<p>
							<access-token-for-url path="#{path('/login')}"/>
							<input type="hidden" id="redirect" name="redirect" value="#{coalesce(redirect,'')}" />
							<input type="submit" id="login"    name="login"    value="Login"/>
						</p>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>