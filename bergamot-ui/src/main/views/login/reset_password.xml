<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- A template view, applied to all views -->
<html xmlns="com.intrbiz.balsa">
	<head>
		<title>Bergamot Monitoring - Reset Password</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
		<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
		<link href='http://fonts.googleapis.com/css?family=Merriweather+Sans:400,700' rel='stylesheet' type='text/css' />
		<link rel="stylesheet" type="text/css" href="#{public('/css/v1.4.0/style.css')}" />
		<!-- Scripts -->
        <script src="#{public('/js/v1.1.0/bower_components/jquery/dist/jquery.js')}"></script>
        <script type="text/javascript">
            /* <![CDATA[ */
            $(document).ready(function() {
            });
            /* ]]> */
        </script>
	</head>
	<body>
		<div id="content">
			<div class="container">
				<div id="login-box">
					<img src="#{public('/images/logo/bergamot_7_h100.png')}" alt="Welcome to Bergamot Monitoring" class="centre"/>
					<h4 class="centre">Send password reset</h4>
					<form method="post" action="#{path('/reset-password')}">
						<p>
							<input type="text" id="username" name="username" placeholder="Enter your username" value="#{coalesce(username, '')}" title="Enter your username or email address"/>
						</p>
						<p>
							<access-token-for-url path="#{path('/reset-password')}"/>
							<input type="submit" id="reset_password" name="reset_password" value="Send password reset"/>
						</p>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>