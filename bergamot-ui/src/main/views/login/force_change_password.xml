<!DOCTYPE balsa SYSTEM "http://balsa.intrbiz.net/balsa.dtd">
<?RenderLibrary com.intrbiz.balsa?>
<!-- A template view, applied to all views -->
<html xmlns="com.intrbiz.balsa">
	<head>
		<title>Bergamot Monitoring - Change Password</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
		<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
		<link href='http://fonts.googleapis.com/css?family=Merriweather+Sans:400,700' rel='stylesheet' type='text/css' />
		<link rel="stylesheet" type="text/css" href="#{public('/style.css')}" />
		<!-- Scripts -->
        <script src="#{public('/js/bower_components/jquery/dist/jquery.js')}"></script>
        <script type="text/javascript">
            /* <![CDATA[ */
            $(document).ready(function() {
            });
            /* ]]> */
        </script>
	</head>
	<body>
		<div id="content">
			<div class="container">
				<div id="login-box">
					<img src="#{public('/bergamot_7_h100.png')}" alt="Welcome to Bergamot Monitoring" class="centre"/>
					<h4 class="centre">You must change your password continue</h4>
	                <p class="centre">
                        Passwords must be at least 8 characters and should contain 
                        a mix of lower and upper case letters, numbers and symbols.
                    </p>
					<form method="post" action="#{path('/force-change-password')}">
						<p>
							<input type="password" id="password" name="password" placeholder="Enter your password"/>
						</p>
                        <p>
                            <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirm your password"/>
                        </p>
                        <p rendered="#{error == 'mismatch'}" class="error">
                        	Password mismatch
                        </p>
                        <p rendered="#{error == 'validation'}" class="error">
                        	Password must be longer than 8 characters
                        </p>
						<p>
							<access-token-for-url path="#{path('/force-change-password')}"/>
							<input type="hidden" id="redirect" name="redirect" value="#{coalesce(redirect, '')}" />
							<input type="submit" id="change_password" name="change_password" value="Change"/>
						</p>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>