<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bergamot site="bergamot.template">
    
    <group name="generic_group" security-domains="global" template="yes">
        <summary>Generic Group Template</summary>
    </group>
    
    <group name="services" extends="generic_group">
        <summary>Services</summary>
    </group>
    
    <group name="linux-services" groups="services" extends="generic_group">
        <summary>Linux Services</summary>
    </group>
    
    <group name="linux-system-services" groups="linux-services" extends="generic_group">
        <summary>System</summary>
    </group>
    
    <group name="linux-storage-services" groups="linux-services" extends="generic_group">
        <summary>Storage</summary>
    </group>
    
    <group name="linux-monitoring-services" groups="linux-services" extends="generic_group">
        <summary>Monitoring</summary>
    </group>
    
    <group name="linux-daemon-services" groups="linux-services" extends="generic_group">
        <summary>Daemons</summary>
    </group>
    
    <group name="linux-processes-services" groups="linux-services" extends="generic_group">
        <summary>Processes</summary>
    </group>
    
    <group name="linux-users-services" groups="linux-services" extends="generic_group">
        <summary>Users</summary>
    </group>
    
    <group name="linux-network-services" groups="linux-services" extends="generic_group">
        <summary>Network</summary>
    </group>
    
    <group name="network-services" groups="services" extends="generic_group">
        <summary>Network Services</summary>
        <parameter description="ui-icon" name="ui-icon">/images/icons/64/network.png</parameter>
    </group>
    
    <group name="vm-host-services" groups="linux-services" extends="generic_group">
        <summary>VM Host Services</summary>
    </group>
    
    <group name="web-services" groups="services" extends="generic_group">
        <summary>Web Services</summary>
        <parameter description="ui-icon" name="ui-icon">/images/icons/64/world.png</parameter>
    </group>
    
    <group name="db-services" groups="services" extends="generic_group">
        <summary>DB Services</summary>
    </group>
    
    <group name="hosts" extends="generic_group">
        <summary>Hosts</summary>
    </group>
    
    <group name="network-devices" groups="hosts" extends="generic_group">
        <summary>Network Devices</summary>
    </group>
    
    <group name="routers" groups="network-devices" extends="generic_group">
        <summary>Routers</summary>
        <parameter description="ui-icon" name="ui-icon">/images/icons/64/network.png</parameter>
    </group>
    
    <group name="switches" groups="network-devices" extends="generic_group">
        <summary>Switches</summary>
        <parameter description="ui-icon" name="ui-icon">/images/icons/64/network.png</parameter>
    </group>
    
    <group name="linux-servers" groups="hosts" extends="generic_group">
        <summary>Linux Servers</summary>
    </group>
    
    <group name="vm-servers" groups="linux-servers" extends="generic_group">
        <summary>VM Host Servers</summary>
    </group>
    
    <group name="web-servers" groups="hosts" extends="generic_group">
        <summary>Web Servers</summary>
        <parameter description="ui-icon" name="ui-icon">/images/icons/64/world.png</parameter>
    </group>
    
    <group name="db-servers" groups="hosts" extends="generic_group">
        <summary>DB Servers</summary>
    </group>
    
    <group name="websites" extends="generic_group">
        <summary>Websites</summary>
        <parameter description="ui-icon" name="ui-icon">/images/icons/64/world.png</parameter>
    </group>
    
</bergamot>
