<?xml version="1.0"?>
<project
	xsi:schemaLocation="https://bergamot-monitoring.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="https://bergamot-monitoring.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.intrbiz.bergamot</groupId>
		<artifactId>bergamot</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
  <artifactId>bergamot-worker-nagios</artifactId>
	<name>bergamot-worker-nagios</name>
	<url>https://bergamot-monitoring.org</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<dependencies>
	<dependency>
		<groupId>com.intrbiz.bergamot</groupId>
		<artifactId>bergamot-compat-nagios</artifactId>
	</dependency>
	<dependency>
		<groupId>com.intrbiz.bergamot</groupId>
		<artifactId>bergamot-nrpe</artifactId>
	</dependency>
	<dependency>
		<groupId>com.intrbiz.bergamot</groupId>
		<artifactId>bergamot-worker-api</artifactId>
	</dependency>
	<dependency>
		<groupId>com.intrbiz.util</groupId>
		<artifactId>bootstrap</artifactId>
	</dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit-dep</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>org.hamcrest</groupId>
    	<artifactId>hamcrest-library</artifactId>
    	<scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>org.hamcrest</groupId>
    	<artifactId>hamcrest-integration</artifactId>
    	<scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>org.hamcrest</groupId>
    	<artifactId>hamcrest-core</artifactId>
    	<scope>test</scope>
    </dependency>
	</dependencies>
	<build>
		<finalName>bergamot-nagios-worker</finalName>
		<plugins>
			<plugin>
				<groupId>com.intrbiz.util</groupId>
				<artifactId>packaging</artifactId>
				<version>1.0.0-SNAPSHOT</version>
				<configuration>
					<appClass>com.intrbiz.bergamot.worker.NagiosWorker</appClass>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>intrbiz-package</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
