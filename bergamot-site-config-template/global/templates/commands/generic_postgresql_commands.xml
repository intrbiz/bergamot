<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bergamot site="bergamot.local">
    
    <command application="PostgreSQL" name="postgresql_jdbc_check" extends="jdbc_script_check">
        <summary>Check PostgreSQL by executing SQL</summary>
        <parameter name="host">#{host.address}</parameter>
        <parameter name="port">5432</parameter>
        <parameter name="database">postgres</parameter>
        <parameter name="username">monitor</parameter>
        <parameter name="password">monitor</parameter>
        <description>Check a PostgreSQL database cluster</description>
    </command>
    
</bergamot>
