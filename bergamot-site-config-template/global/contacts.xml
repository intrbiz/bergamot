<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bergamot site="bergamot.local">
    
    <contact name="admin" extends="generic_contact" teams="bergamot-admins">
        <summary>Administrator</summary>
        <email>admin@localhost</email>
    </contact>
    
    <contact name="op" extends="generic_contact" teams="ops">
        <summary>Operator</summary>
        <email>op@localhost</email>
    </contact>
    
    <team name="admins" grants="ui.access, ui.read.*, api.access, api.read.*, api.write.*">
        <summary>Administrators</summary>
    </team>
    
    <team name="linux-admins" teams="admins" grants="ui.access, ui.read.*, api.access, api.read.*">
        <summary>Linux Administrators</summary>
        <access-control security-domain="linux-servers" grants="ui.*, api.*, sign.agent"/>
    </team>
    
    <team name="network-admins" teams="admins" grants="ui.access, ui.read.*, api.access, api.read.*">
        <summary>Network Administrators</summary>
        <access-control security-domain="networking-devices" grants="ui.*, api.*, sign.agent"/>
    </team>
    
    <team name="web-admins" teams="admins" grants="ui.access, ui.read.*, api.access, api.read.*">
        <summary>Web Administrators</summary>
        <access-control security-domain="web-servers" grants="ui.*, api.*, sign.agent"/>
    </team>
    
    <team name="db-admins" teams="admins" grants="ui.access, ui.read.*, api.access, api.read.*">
        <summary>DB Administrators</summary>
        <access-control security-domain="database-servers" grants="ui.*, api.*, sign.agent"/>
    </team>
    
    <team name="bergamot-admins" teams="admins" grants="ui.*, api.*, sign.agent, config.*">
        <summary>Bergamot Administrators</summary>
    </team>
    
    <team name="ops" grants="ui.access, ui.read.*, api.access, api.read.*, api.write.downtime.add, api.write.comment.create, api.write.alert.acknowledge">
        <summary>Operators</summary>
    </team>
    
    <team name="api" grants="api.*" revokes="ui.*">
        <summary>Complete API access only, no UI access</summary>
    </team>
    
</bergamot>
