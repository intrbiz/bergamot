<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bergamot site="bergamot.template">
    
    <command category="System Storage" engine="agent" executor="disk" extends="check-agent" name="check-agent-disk">
        <parameter description="Disk Usage Warning Threshold" name="warning">80</parameter>
        <parameter description="Disk Usage Critical Threshold" name="critical">90</parameter>
        <parameter description="Mount point" name="mount">/</parameter>
        <parameter description="UI Icon" name="ui-icon">/images/icons/64/storage_card.png</parameter>
        <summary>Bergamot Agent: Disk Space</summary>
    </command>
    
    <command category="System Storage" engine="agent" executor="disks" extends="check-agent" name="check-agent-disks">
        <parameter description="Disk Usage Warning Threshold" name="warning">80</parameter>
        <parameter description="Disk Usage Critical Threshold" name="critical">90</parameter>
        <parameter description="UI Icon" name="ui-icon">/images/icons/64/storage_card.png</parameter>
        <summary>Bergamot Agent: All Disks</summary>
    </command>
    
    <command category="System Storage" engine="agent" executor="disk-io" extends="check-agent" name="check-agent-disk-io">
        <parameter description="Disk IO Warning Threshold (MB/s)" name="warning">200</parameter>
        <parameter description="Disk IO Critical Threshold (MB/s)" name="critical">250</parameter>
        <parameter description="Check peak IO" name="peak">no</parameter>
        <parameter description="Device Name" name="device">/dev/sda1</parameter>
        <parameter description="UI Icon" name="ui-icon">/images/icons/64/storage_card.png</parameter>
        <summary>Bergamot Agent: Disk IO</summary>
    </command>
    
</bergamot>
